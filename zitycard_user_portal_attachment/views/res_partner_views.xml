<odoo>
    <record id="view_partner_form_inherit_attachments" model="ir.ui.view">
        <field name="name">res.partner.form.inherit.attachments</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <notebook position="inside">
                <page string="Attachments">
                    <field name="attachment_ids" widget="many2many_binary" options="{'mode': 'filename'}"/>
                </page>
            </notebook>
        </field>
    </record>
</odoo>
